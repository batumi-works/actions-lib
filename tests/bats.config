# BATS configuration file for GitHub Actions testing

# Set up test environment
export BATS_LIB_PATH="/usr/lib/bats"
export BATS_TEST_TIMEOUT=60

# Test output format
export BATS_NO_PARALLELIZE_ACROSS_FILES=1
export BATS_NO_PARALLELIZE_WITHIN_FILE=1

# Enable debug mode if needed
# export BATS_DEBUG=1

# Set up temporary directory for tests
export BATS_TEST_TMPDIR="/tmp/bats-actions-test"

# Load test setup
load "bats-setup"